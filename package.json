  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shlomiassaf/ng-router-loader.git"
  },
  "main": "index.js",
  "typings": "index.d.ts",
  "keywords": [
    "webpack",
    "loader",
    "angular",
    "aot",
    "router",
    "lazy-loading"
  ],
  "scripts": {
    "test": "./node_modules/.bin/mocha dist/test --recursive",
